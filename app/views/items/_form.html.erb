<%= form_with(model: item) do |form| %>
  <% if item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :qtd, style: "display: block" %>
    <%= form.number_field :qtd %>
  </div>

  <div>
    <%= form.label :total, style: "display: block" %>
    <%= form.text_field :total %>
  </div>

  <div>
    <%= form.label :medicamento_id, style: "display: block" %>
    <select class= <%= form.text_field :medicamento_id %> >
  <option selected>medicamento</option>
  <% @medicamentos.each do |medicamento| %>

    <option value= <%= medicamento.id %> > <%= medicamento.nome %></option>
  <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
