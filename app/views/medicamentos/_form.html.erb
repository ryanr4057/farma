<%= stylesheet_link_tag 'sty_cad.css' %>

<%= form_with(model: medicamento) do |form| %>
  <% if medicamento.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(medicamento.errors.count, "error") %> prohibited this medicamento from being saved:</h2>

      <ul>
        <% medicamento.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nome, style: "display: block" %>
    <%= form.text_field :nome, class: "form-control", maxlength:15, autocomplete:"off" %><br>


  </div>

  <div>
    <%= form.label :preço, style: "display: block" %>
    <%= form.text_field :preco, class: "form-control", onkeypress:"$(this).mask('000.00')", autocomplete:"off" %><br>
  </div>

  <div>
    <%= form.label :descrição, style: "display: block" %>
    <%= form.text_field :descricao, class: "form-control", autocomplete:"off" %><br>
  </div>

  <div>
  <button class="appointment-btn-criar-a"> Cadastrar Medicamento <class="d-none d-md-inline">
  </div>
<% end %>
