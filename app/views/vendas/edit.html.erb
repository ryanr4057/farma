          </ul>
        </div>
      <% end %>

      <med><div>
        <%= form.label :medicamento_id, style: "display: block" %>
        <select class= <%= form.text_field :medicamento_id %>  >
        <option selected>  </option>
          <% @medicamentos.each do |medicamento| %>
