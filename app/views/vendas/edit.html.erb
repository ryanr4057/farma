        <% @clientes.each do |cliente| %>
          <option value= <%= cliente.id %> > <%= cliente.nome %></option>
      <% end %>
      <select>
    </div></cln>





      <btt><div>
        <%= form.submit "finalizar venda" %>
      </div></btt>

    <% end %>

  </div></c4>


